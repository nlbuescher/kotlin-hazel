package = cimgui
headers = cimgui.h cimgui_impl_glfw.h cimgui_impl_opengl3.h

depends.linux = posix
depends.osx = posix
depends.mingw = posix windows

compilerOpts = -DCIMGUI_DEFINE_ENUMS_AND_STRUCTS
compilerOpts.linux = -I/usr/include -I../cimgui
compilerOpts.osx = -I/usr/local/include
compilerOpts.mingw = -IC:/msys64/mingw/include

linkerOpts.linux = -L/usr/lib -lglfw -lGL -L../cimgui -lcimgui
linkerOpts.osx = -L/usr/local/lib -lcimgui
linkerOpts.mingw = -LC:/msys64/mingw64/lib -Wl,-Bstatic -lstdc++ -static -lcimgui

---

#define IM_OFFSETOF(_TYPE,_MEMBER)  ((size_t)&(((_TYPE*)0)->_MEMBER))  // Offset of _MEMBER within _TYPE. Standardized as offsetof() in modern C++.

static inline void* ImDrawVert_pos_offset()
{
    return (void*)IM_OFFSETOF(ImDrawVert, pos);
}

static inline void* ImDrawVert_uv_offset()
{
    return (void*)IM_OFFSETOF(ImDrawVert, uv);
}

static inline void* ImDrawVert_col_offset()
{
    return (void*)IM_OFFSETOF(ImDrawVert, col);
}
