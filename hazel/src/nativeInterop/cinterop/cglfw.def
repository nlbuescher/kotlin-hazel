package = cglfw
headers = GLFW/glfw3.h

depends.linux = posix
depends.osx = posix
depends.mingw = posix windows

compilerOpts = -DGLFW_INCLUDE_NONE
compilerOpts.linux = -I/usr/include
compilerOpts.osx = -I/usr/local/include
compilerOpts.mingw = -IC:/msys64/mingw64/include

linkerOpts.linux = -L/usr/lib -lglfw
linkerOpts.osx = -L/usr/local/lib -lglfw
linkerOpts.mingw = -LC:/msys64/mingw64/lib -lglfw3
